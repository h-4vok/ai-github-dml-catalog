# .env.example

# --- GitHub Configuration ---
GITHUB_TOKEN=your_github_pat

# --- CHOOSE ONE ---
# GITHUB_ORG_NAME=Sextant-Solutions
GITHUB_USER_NAME=h-4vok
# ------------------

GITHUB_BRANCH_NAME=main

# --- LLM Provider Configuration ---
LLM_PROVIDER=gemini
LLM_TIMEOUT_MS=360000
LLM_REQUEST_DELAY_MS=1000

# --- Debug Configuration ---
SAVE_REJECTED_CANDIDATES=false

# --- Scanner Configuration ---
# Comma-separated list of DML keywords to search for.
SEARCH_DML_KEYWORDS=INSERT,UPDATE,DELETE,MERGE
# Comma-separated list of file extensions to scan.
SCANNER_FILE_EXTENSIONS=.php,.go,.java,.cs,.py,.rb,.js,.ts,.sql

# --- Ollama Configuration ---
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# --- Cloud LLM (OpenAI/Anthropic) Configuration ---
CLOUD_API_KEY=your_openai_or_anthropic_api_key
CLOUD_API_URL=https://api.openai.com/v1/chat/completions
CLOUD_MODEL=gpt-4o

# --- Gemini Configuration ---
GEMINI_API_KEY=your_google_ai_studio_api_key
GEMINI_MODEL=gemini-1.5-flash
